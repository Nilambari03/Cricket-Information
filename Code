#include <stdio.h>
#include <string.h>
struct player
{
  char name[20];
  int age;
  char country[20];
  char type[20];
  int odi;
  int T20;
  float avgbat;
  int wicket;
};struct player p[100];
void batsman(struct player p[], char ty[20],char a[20],int m)
{
 int count=0,i;
 for(i=0;i<m;i++){
 if ((strcmp(a,p[i].country) == 0) &&
			strcmp(p[i].type,"batsman") == 0)
   count++;  
 } printf("\nNumber of batsman from %s are %d.", a, count);
}
void sortbat(struct player p[],int n)
{  int i, j, t;
   for(i=0;i<n;i++)
   {
     for(j=i+1;j<n;j++)
     {
       if(p[i].avgbat > p[j].avgbat)
       {
         t=p[i].avgbat;
         p[i].avgbat=p[j].avgbat;
         p[j].avgbat=t;
       }
     }
   }
   printf("\nThe sorted average batting score is :\n");
  for(i=0;i<n;i++)
  {
    printf("\t%f",p[i].avgbat);
  }
}
void havg(struct player p[],int n)
{
  float cont = p[0].avgbat;
	int c;
	for (int i = 0; i < n; i++) 
  {
		if (p[i].avgbat > cont)
     {
			cont = p[i].avgbat;
			c = i;
		}
	}
	printf("\nPlayer with highest batting avg is %s with avg %.2f.",p[c].name,cont);
}
void bowlers(struct player p[],int n)
{
  char ch[100]; int count;
	printf("\nEnter Country:");
	scanf("%s", ch);
	for (int i = 0; i < n; i++) {
		if ((strcmp(ch, p[i].country) == 0) &&
			strcmp(p[i].type, "bowler") == 0)
   count++;  
	} printf("\nNumber of bowlers from %s are %d.",ch,count);
}
void maxwick(struct player p[],int n)
{
  int cont =p[0].wicket ;
	int c = 0;
	for (int i = 0; i < n; i++) {
		if (p[i].wicket > cont && strcmp(p[i].type, "bowler") == 0) {
			cont = p[i].wicket;
			c = i;
		}
}printf("\nBowler with maximum wickets is %s with %d wickets.",p[c].name, cont);
}
void display(struct player p[],int x)
{
  {
  printf("\n Name\t\tAge\t\tCountry\t\tType\t\tODI's\t\tT20's\t\tAvg. batting\t\tWickets\n");
  printf("\t%s\t\t\t%d\t\t\t%s\t\t%s\t\t\t%d\t\t\t%d\t\t\t%.2f\t\t\t\t%d\t\t",p[x-1].name,p[x-1].age,p[x-1].country,p[x-1].type,p[x-1].odi,p[x-1].T20,p[x-1].avgbat,p[x-1].wicket);
}
}
int main() 
{
  int n,i,ch,x; char a[20];
  printf("\n Enter the number of players:");
  scanf("%d",&n);
  for(i=0;i<n;i++)
  {
    printf("\nEnter the name of player %d:",i+1);
    scanf("%s", p[i].name);
    printf("\nEnter the age of player %d:",i+1);
    scanf("%d", &p[i].age);
    printf("\nEnter the country of player %d:",i+1);
    scanf("%s", p[i].country);
    printf("\nEnter the type of player %d(batsman/bowler/wicket keeper/all rounder):",i+1);
    scanf("%s", p[i].type);
    printf("\nEnter the no. of Odi's played by player %d:",i+1);
    scanf("%d", &p[i].odi);
    printf("\nEnter the no. of T20's played by player %d:",i+1);
    scanf("%d", &p[i].T20);
    printf("\nEnter the average batting of player %d:",i+1);
    scanf("%f", &p[i].avgbat);
    printf("\nEnter the no. of wickets taken by player %d:",i+1);
    scanf("%d", &p[i].wicket);
  }
  start:
  printf("\n**********************************************************\n");
  printf("\n1.Number of batsman from a particular country.");
  printf("\n2.Sort the Batsmam as per the average batting score.");
  printf("\n3.Batsman with highest average score.");
  printf("\n4.Number of bowlers of a particular country.");
  printf("\n5.The bowler that has taken a maximum no of wickets.");
  printf("\n6.Show particular players the entire “Display board information”.");
  printf("\n7.Exit.");
  printf("\nEnter your choice to find the corresponding output:");
  scanf("%d",&ch);
  switch(ch)
  {
    case 1 : printf("\n*****************************************************************\n");
             printf("\nEnter the name of country to find number of batsman :\t");
             scanf("%s",a);
             batsman(p,p[i].type,a,n);
             goto start; 
    case 2 : printf("\n*****************************************************************\n");     
             sortbat(p, n);
             goto start;
    case 3 : printf("\n*****************************************************************\n");     
             havg(p, n);
             goto start;
    case 4 : printf("\n*****************************************************************\n");     
             bowlers(p,n);
             goto start; 
    case 5 : printf("\n*****************************************************************\n");     
             maxwick(p, n);
             goto start; 
    case 6 : printf("\n*****************************************************************\n");
             printf("\nEnter the number of player to display information:\t");
             scanf("%d",&x);
             display(p,x);
             goto start; 
    case 7 : printf("\n*****************************************************************\n");
             printf("\nThank you!!");
             break;
    default: printf("\n*****************************************************************\n");
             printf("\nInvalid input...Please re-enter.");
             goto start; 
  } 
}

